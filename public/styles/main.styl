
/*
* Main styles
*/

/*
* Functions for cross browser rendering
*/

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

transition()
  -webkit-transition arguments
  -o-transition arguments
  transition arguments
  
opacity()
  opacity arguments
  -moz-opacity arguments
  -khtml-opacity arguments
  -ms-filter 'progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(arguments * 100) + ')'
  filter unquote('alpha(opacity=' + round(arguments * 100) + ')')

.marker-labels
  font-size 11px
  color #fff
  border-radius(6px)
  opacity(0.8)
  background #222
  border 1px solid #ccc
  padding 2px 5px

body
  padding-top 115px

footer
  margin-top 1em

.jumbotron
  margin-top -12px 

.toast-top-right
    top 70px

.container-fluid
    padding 0

.form-group
  .input-group
    padding 0 15px !important

::-webkit-validation-bubble-message
  display none

.angular-google-map-container
  height: 400px;

/*
* Fonts
*/

@font-face
  font-family 'OrangeJuice'
  src url('../../fonts/orange_juice_2.0-webfont.eot')
  src url('../../fonts/orange_juice_2.0-webfont.eot?#iefix') format('embedded-opentype'),
         url('../../fonts/orange_juice_2.0-webfont.woff2') format('woff2'),
         url('../../fonts/orange_juice_2.0-webfont.woff') format('woff'),
         url('../../fonts/orange_juice_2.0-webfont.ttf') format('truetype'),
         url('../../fonts/orange_juice_2.0-webfont.svg#orange_juiceregular') format('svg')
  font-weight normal
  font-style normal



/*
* Additional styling classes
 */

.vcenter
  display inline-block
  vertical-align middle
  float none

.table-wrapped
  table-layout fixed
  word-wrap break-word

.text-bold
  font-weight bold
  
#panel.navbar-toggle
  background #00bc8c
  border none

/*
* Select dropdowns
*/

.bootstrap-select
  .filter-option
    max-width 300px
    text-overflow ellipsis
    

/*
* Custom file input
*/


.custom-file-input
  width: 130px;
  margin-top: 11px;
  margin-left: auto;
  margin-right: auto;
  :hover
    margin-top 11px
  &::-webkit-file-upload-button
    visibility hidden
  &::before
    content: 'Choose file...';
    background: transparent;
    padding: 5px 8px;
    outline: 0;
    white-space: nowrap;
    -webkit-user-select: none;
    cursor: pointer;
    font-size: 1em;


/*
* Working hours
*/

#working-time .col-xs-12 .col-xs-12
  margin-bottom 0.25em
  

/*
* Accordion
*/


.panel-heading
  padding 20px 15px

/*
* Search And Search Results
*/
#search-field
  z-index 11
  
#search-results
  position absolute
  z-index 10
  width inherit
  background #ddd
  border 1px solid #111
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px