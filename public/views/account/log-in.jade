.container
  .well
    form.form-horizontal(name='logInForm', ng-controller='LogInCtrl')
      fieldset
        legend
          .row
            .col-md-4.col-xs-4.vcenter
              h2 Log in
            .col-md-8.col-xs-8.vcenter
              h5.text-right Don't have an account? 
                a(href="../signup") Sign up        
        .row
          .col-md-7
            .form-group
              label.col-md-2.control-label(for='username') Username
              .col-md-9
                input.form-control(type='text', placeholder='Username', ng-model='user.username', required, on-focus)
            .form-group
              label.col-md-2.control-label(for='password') Password
              .col-md-9
                input.form-control(type='password', placeholder='Password', ng-model='user.password', required)
            .form-group
              label.col-md-2.control-label(for='recaptcha') RECAPTCHA Challenge
              .col-md-9
                div(re-captcha, ng-model='user.captcha')
            .form-group
              .col-md-9.col-md-offset-2
                .pull-right
                  button.btn.btn-primary(ng-click='login(user)', ng-disabled='logInForm.$invalid') Login
                  a.btn.btn-danger(href="/", style="margin-left:0.2em") Cancel


          .col-md-5
            .col-xs-10.col-xs-offset-1
                .form-group(style='margin-top:2em')
                  a.btn.btn-lg.btn-facebook.btn-block(href="api/auth/facebook", target="_blank")
                    i.fa.fa-facebook
                    span.visible-xs &nbsp; Login
                    span.hidden-xs&nbsp; Connect with Facebook
                .form-group
                  a.btn.btn-lg.btn-twitter.btn-block(href="api/auth/twitter", target="_blank")
                    i.fa.fa-twitter
                    span.visible-xs &nbsp; Login
                    span.hidden-xs&nbsp; Connect with Twitter
                .form-group
                  a.btn.btn-lg.btn-google-plus.btn-block(href="api/auth/google", target="_blank")
                    i.fa.fa-google-plus
                    span.visible-xs &nbsp; Login
                    span.hidden-xs&nbsp; Connect with Google
