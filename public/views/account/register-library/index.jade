.jumbotron
  .container
    h1 #{__("Register a library")}


.container
  form.form-horizontal(name='libraryForm', novalidate)
    fieldset
      .row
      
      ul.nav.nav-tabs(style='margin-bottom: 25px')
        
        li.active
          a(href='#main-information', data-toggle='tab', target='_self').active
            | #{__("Main information")}
        li
          a(href='#working-schedule', data-toggle='tab', target='_self')
            | #{__("Working schedule")}
        li
          a(href='#librarians', data-toggle='tab', target='_self')
            | #{__("Librarian profile")}
          
      include ../../partials/mongoose-validation


      #myTabContent.tab-content

        include ./main-information
        include ./working-time
        include ./librarians

      .pull-right
        button.btn.btn-success(ng-click='addLibrary()') #{__("Register")}
        a.btn.btn-danger(href='/admin/libraries', style='margin-left:0.2em') #{__("Cancel")}