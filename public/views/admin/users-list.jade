div.container
  table.table
    tr(ng-repeat='user in users')
      td {{ user.firstName }}
      td {{ user.lastName }}
      td
        a.btn(href='/admin/user/{{ user._id }}') Browse
      td
        a.btn(href='/admin/user/edit/{{ user._id }}') Edit
      td
        a.btn(href='/admin/user/delete/{{ user._id }}' onclick='return window.confirm("Deleting an user" || "Are you sure that you want to delete this user?")') Delete

