-var selected = 'books'

.container
  .well
    form.form-horizontal(name='bookForm')
      fieldset
        input.form-control(type='hidden', ng-model='book._id')
        legend Update Book "{{ book.bookName }}"
        .row
          .col-md-11.col-md-offset-1
            .col-md-5
              .form-group
                  label.control-label(for="total") Total
                  .row
                      .col-xs-12
                          input.form-control(name="total", type="text", ng-model="book.total") 
                  label.control-label(for="given") Given
                  .row
                      .col-xs-12
                          input.form-control(name="given", type="text", ng-model="book.given") 
              
            .col-md-5.col-md-offset-1
              .form-group
                label.control-label(for='available') Available
                .row.input-group.col-xs-12
                    input.form-control(name='available', type='text', placeholder='Available', ng-model='book.available')
        
        .pull-right
          button.btn.btn-primary(ng-click='updateLibBookAsLibrarian(book)', ng-disabled='bookForm.$invalid') Update
          a.btn.btn-danger(href='/libraryPanel/books-library', style="margin-left:0.2em") Cancel
