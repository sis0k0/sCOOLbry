include ../panel

.container
    h1.text-center Bookings
    
    .row
      .col-md-8.col-md-offset-2
        input(placeholder="Search...", ng-model="search")

    #users-list.table-responsive(ng-init="pages();")
      table.table.table-hover.table-bordered(ng-class="{ 'table-wrapped': windowWidth>768 }", resize)
        thead
          tr.text-bold.text-primary
            td#_id(ng-click="sort($event); reloadBookings()") ID
              span#_id.glyphicon.glyphicon-sort.text-right
            td#userID(ng-click="sort($event); reloadBookings()") Username
              span#userID.glyphicon.glyphicon-sort.text-right
            td#bookID(ng-click="sort($event); reloadBookings()") Book
              span#bookID.glyphicon.glyphicon-sort.text-right
            td#bookDate(ng-click="sort($event); reloadBookings()") End date
              span#bookDate.glyphicon.glyphicon-sort.text-right
            td Actions
        tr(ng-repeat="booking in bookings")
          td.text-bold {{ booking._id }}
          td {{ booking.user.username }}
          td {{ booking.book.title }}
          td {{ booking.bookDate }}
          td
            a.btn-sm(href='/library-panel/user/interact/{{ booking.userID }}', title='Give A Book', tooltip)
              span.glyphicon.glyphicon-book.text-success
            a.btn-sm(href='/library-panel/booking/delete/{{ booking._id }}', title='Delete', tooltip, onclick='return window.confirm("Deleting a booking" || "Are you sure that you want to delete this booking?")')
              span.glyphicon.glyphicon-remove.text-danger
    .pagination
        li(ng-repeat="i in range(pagesCount) track by $index")
          a(class="pageItem" href="#" ng-click="setPage($index+1, $event); reloadBookings();" id="page-{{ $index+1 }}") {{ $index+1 }}

