/*
* Welcome section styles
*/




@media screen and (min-width: 768px)
  .jumbotron
    h1
      font-size 90px !important
      margin-top 30px !important
@media screen and (min-width: 768px)
  .jumbotron
    h2
      font-size 50px !important
      margin-top 30px !important

#welcome-section
  background-color #39c
  padding 20px
  margin-top -32px
  h1, h2
    text-align center
    color #fff
    font-weight normal
  @media (max-width: 991px)
    .col-md-4
      display none
  img
    margin auto
  a
    text-decoration none
    color #134fb8
    &:hover
      color #4582ec
  .btn-group-lg
    margin-top 70px
    a
      padding 19px 16px
      font-size 23px
      line-height 1.33
      border-radius 6px
      width 270px
      color #fff
      border 1px solid #fff
    .btn-primary
      margin-right 25px
    .btn-info
      margin-right 25px
      background-color transparent
      &:hover
        background-color #1CC3F5
    .btn-primary
      background-color #1863e6
      &:hover
        background-color #4582ec


