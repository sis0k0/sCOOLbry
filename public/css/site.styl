body
  padding-top 80px


header
  border-bottom 3px solid #09f !important

.navbar-right .navbar-form
  input
    margin-right 10px
  a.btn
    margin-left 10px

.toast-top-right
  top 70px






#welcome-section
  background-color #6cf
  padding 20px
  h1, h2
    text-align center
    color #fff
    font-weight normal
  h1
    font-size 90px
    margin-top 45px
  h2
    font-size 50px
    margin-top 30px
  img
    margin auto
  a
    text-decoration none
  .btn-group-lg
    margin-top 70px
    button
      padding 14px 16px
      font-size 20px
      line-height 1.33
      border-radius 6px
      width 250px
    .btn-info
      margin-right 50px
      background transparent
      border 1px solid #fff




footer
  padding-left 120px
  padding-right 120px
  p
    border-top 1px solid #808080
    padding-top 10px
