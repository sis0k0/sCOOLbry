extends includes/layout
block main-content

    .container-fluid
        header(role="navigation").nav.navbar-inverse.navbar-fixed-top
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-inverse-collapse')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/")

            .navbar-collapse.collapse.navbar-inverse-collapse

                form.navbar-form.navbar-left#search-header(role='search')
                    .form-group.input-group
                        input.form-control(type='text', placeholder='Search for books by title, author, genre, ISBN or citation')
                        .input-group-btn
                            button(type="submit").btn.btn-default
                                i.glyphicon.glyphicon-search


                
                .navbar-right(ng-controller="LoginCtrl")
                    ul#top-menu.nav.navbar-nav.navbar-right(ng-hide="identity.isAuthenticated()")
                        li
                            a(href='/libraries') Libraries
                        li
                            a(href='/catalogue') Catalogue
                        li
                            a(href="/login") Log in
                        li
                            a(href="/signup").sign-up Sign Up
                    
                    ul#top-menu.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
                        li
                            a(href='/libraries') Libraries
                        li
                            a(href='/catalogue') Catalogue
                        li.dropdown
                            a.dropdown-toggle(href="", data-toggle="dropdown")
                                | {{ identity.currentUser.firstName + ' ' + identity.currentUser.lastName }}
                                span.caret
                            ul.dropdown-menu
                                li(ng-show="identity.currentUser.isAdmin()")
                                    a(href="/admin/users") Users
                                li(ng-show="identity.isAuthenticated()")
                                    a(href="/profile") Profile
                                li
                                    a(href="/" ng-click="logout()") Sign Out
                    
    section
        div(ng-view)

    footer
        p.text-center
            | &copy; sCOOLbry 2014
